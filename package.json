{
  "name": "@gest-hamburg/wordpress-style",
  "version": "2021.4.1.1",
  "description": "Styling for website https://gest-hamburg.de/",
  "homepage": "https://github.com/mmichaelis/gest-hh-wordpress",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmichaelis/gest-hh-wordpress.git"
  },
  "license": "Unlicense",
  "private": true,
  "author": {
    "name": "Mark Michaelis",
    "url": "https://about.me/michaelismark"
  },
  "devDependencies": {
    "autoprefixer": "^10.2.5",
    "cssnano": "^4.1.10",
    "install": "^0.13.0",
    "node-sass": "^5.0.0",
    "npm": "^7.7.6",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "sass-migrator": "^1.3.7",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0"
  },
  "scripts": {
    "build": "node-sass --output-style expanded --indent-type space --indent-width 2 --linefeed lf --include-path include --precision 0 --output ./build src/scss",
    "postcss": "npx postcss ./build/**/*.css --no-map --use autoprefixer --use cssnano --base ./build --dir ./dist",
    "lint": "npx stylelint src/scss/**/*.scss",
    "watch": "npm run build && npm run build -- --watch",
    "clean": "rimraf ./build && rimraf ./dist",
    "update": "npm-check-updates --upgrade",
    "batch": "npm install & npm run lint && npm run build && npm run postcss",
    "github-build": "npm run batch"
  }
}
