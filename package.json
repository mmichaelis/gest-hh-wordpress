{
  "name": "gest-hh-wordpress",
  "version": "2021.1.15.1",
  "description": "Styling for website https://gest-hamburg.de/",
  "homepage": "https://github.com/mmichaelis/gest-hh-wordpress",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmichaelis/gest-hh-wordpress.git"
  },
  "license": "Unlicense",
  "private": true,
  "author": {
    "name": "Mark Michaelis",
    "url": "https://about.me/michaelismark"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.4",
    "cssnano": "^4.1.10",
    "install": "^0.13.0",
    "node-sass": "^4.14.1",
    "npm": "^6.14.5",
    "postcss-cli": "^7.1.1",
    "sass-migrator": "^1.2.3",
    "stylelint": "^13.6.1",
    "stylelint-config-sass-guidelines": "^7.0.0"
  },
  "scripts": {
    "build": "node-sass --output-style expanded --indent-type space --indent-width 2 --linefeed lf --include-path include --precision 0 --output target/build src/scss",
    "postcss": "npx postcss target/build/**/*.css --no-map --use autoprefixer --use cssnano --base target/build --dir target/",
    "lint": "npx stylelint src/scss/**/*.scss",
    "watch": "yarn build && yarn build -- --watch",
    "clean": "rimraf target",
    "github-build": "yarn lint && yarn build && yarn postcss"
  }
}
